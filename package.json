{
  "name": "bubble-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for interacting with Bubble.io applications",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
